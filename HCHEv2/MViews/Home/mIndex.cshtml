@{
    Layout = null;
    var j = 0;
    var k = 1;
    var deliveryNews = ViewBag.DeliveryNews as List<HC.Data.Models.News>;
    var DianZhuanNews = ViewBag.DianZhuanNews as List<HC.Data.Models.News>;
}
@using HC.Data.ViewModels
@model IndexModel

<!DOCTYPE HTML PUBLIC "-//WAPFORUM//DTD XHTML Mobile 1.0//EN" "http://www.wapforum.org/DTD/xhtml-mobile10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0, maximum-scale=1.0,user-scalable=no" />
    <meta name="generator" content="bd-mobcard" />
    <meta name="format-detection" content="telephone=yes" />
    <title>电力专科学校</title>
    <link href="~/mContent/styles/css.css" rel="stylesheet" type="text/css" />
    <link href="~/mContent/styles/module.css" rel="stylesheet" type="text/css" />
    <script src="~/mContent/scripts/huadongmen.js" type="text/javascript"></script>
</head>

<body>
    <header></header><!--解决uc浏览器字体变大问题 -->
    <div class="header_top">
        <div class="header">
            <div class="logo"><a href="/"><img src="~/mContent/images/logo.png" /></a></div>
            <div class="header_r header_r_hover">
                @Html.Action("HeadNav", "Home")
            </div>
            <div class="clr"></div>
        </div>
    </div>

    <div class="index_block">
        <link href="~/mContent/scripts/banner_wap/common.css" rel="stylesheet" type="text/css">
        <script type="text/javascript" src="~/mContent/scripts/banner_wap/jQuery.js"></script>
        <script type="text/javascript" src="~/mContent/scripts/banner_wap/swipe.js"></script>

        <div onselectstart="return true;" ondragstart="return false;" style="-webkit-transform:translate3d(0,0,0);">
            <div id="banner_box" class="box_swipe">
                <ul>
                    @foreach (var pic in Model.BigPicNews)
                    {
                        <li><a href="@Url.Action("news", "Information",new{id=pic.NewsID})"><img src="@pic.PicURL" width="100%" /></a></li>
                    }
                </ul>
                <ol>
                    @foreach (var pic in Model.BigPicNews)
                    {
                        if (j == 0)
                        {
                            <li class="on"></li>
                        }
                        else
                        {
                            <li></li>
                        }
                        j++;
                    }

                </ol>
            </div>
        </div>
        <script>
            $(function () {
                new Swipe(document.getElementById('banner_box'), {
                    speed: 500,
                    auto: 5000,
                    callback: function () {
                        var lis = $(this.element).next("ol").children();
                        lis.removeClass("on").eq(this.index).addClass("on");
                    }
                });
            });
        </script><link rel="stylesheet" type="text/css" href="~/mContent/scripts/roll_text/css.css">
        <script type="text/javascript">
				<!--
				var rollText_k=5; //菜单总数
				var rollText_i=1; //菜单默认值
				//setFocus1(0);
				rollText_tt=setInterval("rollText(1)",8000);
				function rollText(a){
				clearInterval(rollText_tt);
				rollText_tt=setInterval("rollText(1)",8000);
				rollText_i+=a;
				if (rollText_i>rollText_k){rollText_i=1;}
				if (rollText_i==0){rollText_i=rollText_k;}
				//alert(i)
				 for (var j=1; j<=rollText_k; j++){
				 document.getElementById("rollTextMenu_"+j).style.display="none";
				 }
				 document.getElementById("rollTextMenu_"+rollText_i).style.display="block";
				 document.getElementById("pageShow").innerHTML = rollText_i+"/"+rollText_k;
				}
				//-->
        </script>

        <div class="notice">
            <div class="roll_text">
                <p class="roll_text_button"><a class="a1" title="上一条" href="javascript:rollText(-1);"></a><a class="a2" title="下一条" href="javascript:rollText(1);"></a></p>
                <p class="roll_text_number" id="pageShow">1/5</p>
                <div class="roll_text_list">
                    <p class="title">通知公告</p>
                    <ul>
                        @foreach (var devery in deliveryNews)
                        {
                            if (k == 1)
                            {
                                <li id="rollTextMenu_@k" style="display: block"><a href="@Url.Action("news", "Information", new { id = devery.NewsID })">@devery.NewsTitle</a><span>@devery.CreatTime.ToString("MM/dd")</span></li>
                            }
                            else
                            {
                                <li id="rollTextMenu_@k" style="display: none"><a href="@Url.Action("news", "Information", new { id = devery.NewsID })">@devery.NewsTitle</a><span>@devery.CreatTime.ToString("MM/dd")</span></li>
                            }
                            k++;
                        }
                    </ul>
                </div>
                <div class="clr"></div>
            </div>
        </div>
        <div class="clr10"></div>

        <div class="part_01">
            <table cellspacing="0" cellpadding="0" border="0">
                <tr>
                    <td class="a1"><a href="#"><b></b><span>图书馆</span></a></td>
                    <td class="a2"><a href="#"><b></b><span>门户系统登录</span></a></td>
                    <td class="a3"><a href="#"><b></b><span>教育教学</span></a></td>
                    <td class="a4"><a href="#"><b></b><span>招生就业</span></a></td>
                </tr>
            </table>
        </div>
        <div class="clr10"></div>

        <div class="column_01">
            <div class="column_t"><span class="column_more"><a href="#">+</a></span><p class="column_title">电专新闻</p></div>
            <div class="column_c">
                <div class="part_02">
                    <div class="part_list">
                        <ul>
                            @foreach (var dzn in DianZhuanNews)
                            {
                                <li><span class="time">@dzn.CreatTime.ToString("yyyy-MM-dd")</span><a href="@Url.Action("news", "Information", new { id = dzn.NewsID })">@dzn.NewsTitle</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="clr10"></div>

        <div class="column_01">
            <div class="column_t"><span class="column_more"><a href="#">+</a></span><p class="column_title a2">教育教学</p></div>
            <div class="column_c">
                <div class="part_03">
                    <ul class="clearfix">
                        <li><p><a href="#"><img src="~/mContent/images/jpg_01a.jpg" /></a></p></li>
                        <li><p><a href="#"><img src="~/mContent/images/jpg_01b.jpg" /></a></p></li>
                        <li><p><a href="#"><img src="~/mContent/images/jpg_01c.jpg" /></a></p></li>
                        <li><p><a href="#"><img src="~/mContent/images/jpg_01d.jpg" /></a></p></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="clr10"></div>

        <div class="tab_01">
            <div class="tab_t">
                <ul class="clearfix">
                    <li onclick="huadongmen(1,3,'anniu2_','neirong2_')" id="anniu2_1" class="on"><p>招生就业</p></li>
                    <li onclick="huadongmen(2,3,'anniu2_','neirong2_')" id="anniu2_2"><p>资格认证</p></li>
                    <li onclick="huadongmen(3,3,'anniu2_','neirong2_')" id="anniu2_3">名师风采</li>
                </ul>
            </div>
            <!--招生就业-->
            <div class="tab_c" id="neirong2_1">
                <div class="part_04">

                    @if (Model.EmploymentRecNews != null)
                    {
                        Model.EmploymentRecNews.NewsContent = System.Text.RegularExpressions.Regex.Replace(System.Text.RegularExpressions.Regex.Replace(Model.EmploymentRecNews.NewsContent, "<[^>]+>", ""), "&[^;]+;", "");
                        if (Model.EmploymentRecNews.NewsContent.Length > 50)
                        {
                            Model.EmploymentRecNews.NewsContent = Model.EmploymentRecNews.NewsContent.Substring(0, 50);
                        }
                        <div class="hot">
                            <p class="pic"><a href="@Url.Action("news", "Information", new { id = Model.EmploymentRecNews.NewsID })"><img src="@Model.EmploymentRecNews.PicURL" /></a></p>
                            <div class="title_bg">
                                <p class="title"><a href="@Url.Action("news", "Information", new { id = Model.EmploymentRecNews.NewsID })" title="标题">@Model.EmploymentRecNews.NewsTitle</a></p>
                                <div class="sum">@Model.EmploymentRecNews.NewsContent</div>
                            </div>
                        </div>
                    }


                    <div class="part_list">
                        <ul>
                            @foreach (var zs in Model.EmploymentNews)
                            {
                                <li><span class="time">@zs.CreatTime.ToString("yyyy-MM-dd")</span><a href="@Url.Action("news", "Information", new { id = zs.NewsID })">@zs.NewsTitle</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!--资格认证-->
            <div class="tab_c" id="neirong2_2" style="display: none">
                <div class="part_04">


                    @if (Model.CertificationRecNews != null)
                    {
                        Model.CertificationRecNews.NewsContent = System.Text.RegularExpressions.Regex.Replace(System.Text.RegularExpressions.Regex.Replace(Model.CertificationRecNews.NewsContent, "<[^>]+>", ""), "&[^;]+;", "");
                        if (Model.CertificationRecNews.NewsContent.Length > 50)
                        {
                            Model.CertificationRecNews.NewsContent = Model.CertificationRecNews.NewsContent.Substring(0, 50);
                        }
                        <div class="hot">
                            <p class="pic"><a href="@Url.Action("news", "Information", new { id = Model.CertificationRecNews.NewsID })"><img src="@Model.CertificationRecNews.PicURL" /></a></p>
                            <div class="title_bg">
                                <p class="title"><a href="@Url.Action("news", "Information", new { id = Model.CertificationRecNews.NewsID })" title="标题">@Model.CertificationRecNews.NewsTitle</a></p>
                                <div class="sum">@Model.CertificationRecNews.NewsContent</div>
                            </div>
                        </div>
                    }
                    <div class="part_list">
                        <ul>
                           @foreach (var zg in Model.CertificationNews)
                           {
                            <li><span class="time">@zg.CreatTime.ToString("yyyy-MM-dd")</span><a href="@Url.Action("news", "Information", new { id = zg.NewsID })">@zg.NewsTitle</a></li>
                           }
                        </ul>
                    </div>
                </div>
            </div>
            <!--名师风采-->
            <div class="tab_c" id="neirong2_3" style="display: none">
                <div class="part_04">
                    @if (Model.TeacherBearingRecNews.FirstOrDefault() != null)
                    {
                        Model.TeacherBearingRecNews.FirstOrDefault().NewsContent = System.Text.RegularExpressions.Regex.Replace(System.Text.RegularExpressions.Regex.Replace(Model.TeacherBearingRecNews.FirstOrDefault().NewsContent, "<[^>]+>", ""), "&[^;]+;", "");
                        if (Model.TeacherBearingRecNews.FirstOrDefault().NewsContent.Length > 50)
                        {
                            Model.TeacherBearingRecNews.FirstOrDefault().NewsContent = Model.TeacherBearingRecNews.FirstOrDefault().NewsContent.Substring(0, 50);
                        }
                        <div class="hot">
                            <p class="pic"><a href="@Url.Action("news", "Information", new { id = Model.TeacherBearingRecNews.FirstOrDefault().NewsID })"><img src="@Model.TeacherBearingRecNews.FirstOrDefault().PicURL" /></a></p>
                            <div class="title_bg">
                                <p class="title"><a href="@Url.Action("news", "Information", new { id = Model.TeacherBearingRecNews.FirstOrDefault().NewsID })" title="标题">@Model.TeacherBearingRecNews.FirstOrDefault().NewsTitle</a></p>
                                <div class="sum">@Model.TeacherBearingRecNews.FirstOrDefault().NewsContent</div>
                            </div>
                        </div>
                    }
                    <div class="part_list">
                        <ul>
                            @foreach (var ms in Model.TeacherBearingNews)
                            {
                                <li><span class="time">@ms.CreatTime.ToString("yyyy-MM-dd")</span><a href="@Url.Action("news", "Information", new { id = ms.NewsID })">@ms.NewsTitle</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="clr10"></div>

        <div class="column_01">
            <div class="column_t"><span class="column_more"><a href="#">+</a></span><p class="column_title a3">校园生活</p></div>
            <div class="column_c">



                <div class="part_05 clearfix">
                    @{
                        var lastLifeNews = new HC.Data.Models.News();
                        if (Model.SchooleLifeNews.Count > 0)
                        {
                            lastLifeNews = Model.SchooleLifeNews.FirstOrDefault();
                        }
                    }

                    <div class="part_l"><p><a href="@Url.Action("news", "Information", new { id = lastLifeNews.NewsID })"><img src="@lastLifeNews.PicURL" /></a></p></div>


                    <div class="part_r">
                        <ul>
                            @for (var p = 1; p < Model.SchooleLifeNews.Count; p++)
                            {
                                <li><p><a href="@Url.Action("news", "Information", new { id = Model.SchooleLifeNews[p].NewsID })"><img src="@Model.SchooleLifeNews[p].PicURL"  /></a></p></li>
                            }
                        </ul>
                        <div class="clr"></div>
                    </div>
                </div>


            </div>
        </div>
        <div class="clr10"></div>
    </div>
    <div class="footer">Copyright &copy; 2016 西安电力高等专科学校</div>
    
