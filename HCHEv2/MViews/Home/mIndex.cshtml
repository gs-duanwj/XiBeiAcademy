    <script type="text/javascript" src="~/mContent/scripts/menu/jquery-1.js"></script>
    <script type="text/javascript" src="~/mContent/scripts/menu/SelectRe.js"></script>

    <!-- 仅本页面调用的方法 -->
    <script type="text/javascript">
        $(function () {
            /*模拟下拉框*/
            xdmJS.selectAnalog("selectdd", "");
        });
    </script>
</body>
</html>